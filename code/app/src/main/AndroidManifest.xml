        <activity android:name=".activities.RequestListActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".activities.BorrowedBookListActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ChangeProfile">

        </activity>

        <activity
            android:name=".activities.UserSignUp" >

        </activity>


        <activity
            android:name=".activities.UserLogin">

        </activity>

        <activity
            android:name=".activities.AddOwnerBook">



        </activity>

        <activity
            android:name=".activities.MapsActivity"
            android:label="Maps"></activity>

        <activity
            android:name=".activities.DisplayMapActivity"
            android:label="Maps2"></activity>

        <activity
            android:name=".activities.Photograph"
            android:label="Maps2"></activity>


        <activity
            android:name=".activities.EditDeleteOwnerBook">

        </activity>

    </application>

</manifest>