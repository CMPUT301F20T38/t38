<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="20dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/owner_navigate_back"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_navigate_back"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingRight="20dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/owner_add_photo"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_book_image"/>

            <View
                android:layout_width="13dp"
                android:layout_height="26dp"/>

            <ImageView
                android:id="@+id/owner_show_request"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_owner_request"/>

            <View
                android:layout_width="13dp"
                android:layout_height="26dp"/>

            <ImageView
                android:id="@+id/owner_return"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_owner_return"/>

            <View
                android:layout_width="13dp"
                android:layout_height="26dp"/>

            <ImageView
                android:id="@+id/owner_map_change"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_owner_map"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_title"/>

        <EditText
            android:id="@+id/owner_ed_title"
            android:hint="@string/book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_author"/>

        <EditText
            android:id="@+id/owner_ed_author"
            android:hint="@string/book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_ISBN"/>

        <EditText
            android:id="@+id/owner_ed_ISBN"
            android:hint="@string/book_ISBN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <Button
            android:id="@+id/owner_edit_btn"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Comfirm"/>

        <Button
            android:id="@+id/owner_delete_btn"
            android:layout_weight="1"
            android:textColor="#8b0000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Delete"/>
    </LinearLayout>

</LinearLayout>
